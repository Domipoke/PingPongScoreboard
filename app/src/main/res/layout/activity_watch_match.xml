<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WatchMatch">

    <TextView
        android:id="@+id/wupdt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/watchpl1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/watchpl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wupdt"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:id="@+id/wp1name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chakra_petch_bold"
            android:gravity="center"
            android:text="TextView"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/wp1score"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/chakra_petch_bold"
            android:gravity="center"
            android:text="0"
            android:textSize="130sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/wp1set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chakra_petch_bold"
            android:gravity="center"
            android:text="0"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wp1name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/watchpl2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/watchpl1"
        app:layout_constraintTop_toBottomOf="@id/wupdt">

        <TextView
            android:id="@+id/wp2name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chakra_petch_bold"
            android:gravity="center"
            android:text="TextView"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/wp2score"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/chakra_petch_bold"
            android:gravity="center"
            android:text="0"
            android:textSize="130sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/wp2name" />

        <TextView
            android:id="@+id/wp2set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chakra_petch_bold"
            android:gravity="center"
            android:text="0"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wp2name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>